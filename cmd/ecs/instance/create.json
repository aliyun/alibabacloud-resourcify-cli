{
    "mapping": "ecs20140526/CreateInstance",
    "configPackage": "@alicloud/rpc-client",
    "param": {
        "image": {
            "mapping": "imageId",
            "shortHand":"i"
        },
        "name": {
            "mapping": "instanceName",
            "shortHand": "n"
        },
        "region": {
            "mapping": "regionId",
            "required": true,
            "shortHand": "r"
        },
        "systemDisk": {
            "mapping":"systemDisk",
            "param": {
                "size": {
                    "mapping": "size",
                    "alias":"dSize"
                },
                "Category": {
                    "mapping": "category",
                    "alias":"dCategory"
                }
            }
        }
    },
    "args": {
        "_yargsMin":1,
        "instanceType": "string"
    }
}